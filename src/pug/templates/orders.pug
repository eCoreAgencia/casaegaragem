extends ../layouts/default.pug

block vars
  - var pageTitle = 'Minha Conta'
  - var bodyClass = 'orders account catalog category'

block head
    link(rel="stylesheet", href="https://casaegaragem.vteximg.com.br/arquivos/bootstrap.min.css")/
    script(src='https://casaegaragem.vteximg.com.br/arquivos/bootstrap.js')

block content
    section.section__page.section__diff
        .diff.container
            .diff__container
                .diff__box
                    .diff__icon.diff__icon--boleto
                        include ../../svg/coupon.svg
                    .diff__info
                        span.diff__title 10% de desconto no boleto
                        span.diff__subtitle em todos os produtos do site
                .diff__box
                    .diff__icon.diff__icon--frete
                        include ../../svg/truck.svg
                    .diff__info
                        span.diff__title frete grátis
                        span.diff__subtitle a partir de R$ 299 para o Sudeste
                .diff__box
                    .diff__icon.diff__icon--troca
                        include ../../svg/refresh.svg
                    .diff__info
                        span.diff__title troca grátis (7 dias)
                        span.diff__subtitle Tranquilidade na sua primeira compra
                .diff__box
                    .diff__icon.diff__icon--atacado
                        include ../../svg/percent.svg
                    .diff__info
                        span.diff__title Compre no Atacado
                        span.diff__subtitle Receba descontos especiais
    section.section__page.section__account
        .container
            +vtex-controller('<vtex.cmc:orderList/>')
                .render-container.render-route-my-orders-portal
                    .render-provider
                        .container.vtex-bootstrap
                        .page-header
                            h1.title Meus Pedidos
                            ul.nav.nav-pills
                                li.active
                                    a(href='#/') Meus Pedidos
                                li
                                    a(href='#/subscriptions') Minhas Recorrências
                        .helvetica.myo-orders-listing
                            .w-70.center.ba.b--black-20.bg-near-white.pa3.tc.br3.mv4
                            h1.f4.gray.tc.ttn
                                span Você ainda não possui pedidos!            