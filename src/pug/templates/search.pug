extends ../layouts/default.pug

block vars
	- var pageTitle = 'Categoria'
	- var bodyClass = 'category catalog search'

block content
	section.section__page.section__diff
		.container
			include ../vtexParts/diff.pug
	section.section__page.section__empty
		.section__inner.container
			.banner.banner__category.banner--leve(style="display: none;")
				+vtex-controller('<vtex:contentPlaceHolder id="Banner Leve Mais e Pague Menos" />')
					.box-banner
						a(href="")
							img(src="http://via.placeholder.com/2000x207")/
			.banner.banner__category.banner--faca(style="display: none;")
				+vtex-controller('<vtex:contentPlaceHolder id="Banner Faça Você mesmo" />')
					.box-banner
						a(href="")
							img(src="http://via.placeholder.com/2000x207")/
			.banner.banner__category.banner--profi(style="display: none;")
				+vtex-controller('<vtex:contentPlaceHolder id="Banner Profissionais" />')
					.box-banner
						a(href="")
							img(src="http://via.placeholder.com/2000x207")/
	section.section__page.section__breadcrumb
		.container.is-fluid
			.section__inner
				.search-word
					span.search__title
						|	Busca Por:
					span.search__word
						| "Parafusadeira"
				.orderBy
					.select
						select
							option(value='') Ordenar por
							option(value='OrderByPriceASC') Menor Preço
							option(value='OrderByPriceDESC') Maior Preço
							option(value='OrderByTopSaleDESC') Mais vendidos
							option(value='OrderByReviewRateDESC') Melhores avaliações
							option(value='OrderByNameASC') A - Z
							option(value='OrderByNameDESC') Z - A
							option(value='OrderByReleaseDateDESC') Data de lançamento
							option(value='OrderByBestDiscountDESC') Melhor Desconto
	section.section__page.section__shelf.shelf
		.container.is-fluid
			+vtex-controller('<vtex.cmc:searchResult layout="65c15678-2bbe-72e0-3aa6-0aa635db2f86" itemCount="12"  columnCount="4" />')
				p.searchResultsTime
					span.resultado-busca-numero
					span.label Produtos encontrados:
					span.value 2
					span.resultado-busca-termo
					span.label Resultado da Pesquisa por:
					strong.value
					span.resultado-busca-tempo
					span.label em
					span.value 7 ms
				.sub
					.resultado-busca-filtro
					fieldset.orderBy
