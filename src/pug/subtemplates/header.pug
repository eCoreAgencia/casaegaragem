header.header
    .header__area.header__info.container
        .header__inner.row
            .header__contact-bar
                span.contact__phone.contact__box
                    i.icon-phone
                    strong Compre pelo Televendas:
                        a(href="tel:(24) 2221-2353") (24) 2221-2353
                span.contact__help.contact__box
                    i.icon-help
                    strong Dúvida? Queremos ouvir você:
                        a(href="tel:(24) 2221-2353") (24) 2221-2353
                span.contact__whatsapp.contact__box
                    i.icon-whatsapp
                    strong Atendimento via Whatsapp:
                        a(href="https://wa.me/(24)2221-2353") (24) 2221-2353
    .header__area.header__main.container
        .header__inner
            .columns
                .header__logo.column
                    .logo
                        .logo__brand
                            a.logo__link(href="/")
                                img.logo__image(src="/arquivos/logo.png", alt="")/
                .header__search-form.column.is-6
                    #header-form
                        form.search-form(action="/busca")
                            .field.has-addons
                                .control.is-expanded
                                    input.input(type='search', name='ft', required='required', autocomplete='off', placeholder='Digite o nome do produto...', onfocus="this.placeholder = ''", onblur="this.placeholder = 'Digite o nome do produto...'")/
                                .control
                                    button.button
                                        span.icon-search
                        .search-form__result-list        
                .header__action-user.column

                    a.button.button--buy-list(href='/lista-de-compras')
                        span.icon-mark
                        span Lista de Compras
                    a.button.button--account(href='/account')
                        span.icon-user
                        span Minha Conta
                    .header__minicart.js-minicart
    .header__area.header__menu.container
        include ../components/menu.pug
