header.header
  .header__area.header__info.container
    .header__inner.row
      .header__contact-bar
        span.contact__phone.contact__box
          i.icon-phone
          strong Compre pelo Televendas:
          | (24) 2221-2353
        span.contact__help.contact__box
          i.icon-help
          strong Dúvida? Queremos ouvir você:
          | (24) 2221-2353
        span.contact__whatsapp.contact__box
          i.icon-whatsapp
          strong Atendimento via Whatsapp:
          | (24) 2221-2353
  .header__area.header__main.container
    .header__inner
      .columns
        .header__logo.column
          .logo
            .logo__brand
              a.logo__link(href="/")
                img.logo__image(src="/arquivos/logo.png", alt="")/
        .header__search-form.column.is-6
          .search-form#header-form
            .field.has-addons
              .control.is-expanded
                input.input(type='text', placeholder='Digite o nome do produto...')/
              .control
                a.button
                  span.icon-search
        .header__action-user.column

          a.button.button--buy-list(href='/lista-de-compras')
            span.icon-mark
            span Lista de Compras
          a.button.button--account(href='/account')
            span.icon-user
            span Minha Conta
          .header__minicart.js-minicart
  .header__area.header__menu.container
    nav.navbar(role='navigation', aria-label='dropdown navigation')
